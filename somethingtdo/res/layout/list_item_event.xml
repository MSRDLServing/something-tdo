<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="wrap_content">
  <Button android:id="@+id/event_list_item_sharedButton"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:layout_alignParentRight="true"
    android:textColor="@color/custom_theme_text"
    android:text="Share"
    android:focusable="false"
    android:padding="4dp" />
  <TextView android:id="@+id/event_list_item_titleTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:textStyle="bold"
    android:layout_toLeftOf="@id/event_list_item_sharedButton"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:textColor="@color/custom_theme_text"
    android:text="Event title" />
  <TextView android:id="@+id/event_list_item_dateTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/event_list_item_titleTextView"
    android:layout_toLeftOf="@id/event_list_item_sharedButton"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:textColor="@color/custom_theme_text"
    android:text="Event date" />
  <TextView android:id="@+id/event_list_item_locationTextView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@id/event_list_item_dateTextView"
    android:layout_toLeftOf="@id/event_list_item_sharedButton"
    android:paddingLeft="4dp"
    android:paddingRight="4dp"
    android:paddingTop="4dp"
    android:textColor="@color/custom_theme_text"
    android:text="Event location" />
</RelativeLayout>


